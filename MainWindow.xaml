<Window x:Class="MusicZero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicZero" Height="2" Width="1920" 
        WindowStyle="None" ResizeMode="NoResize"
        Topmost="True" WindowStartupLocation="Manual"
        Top="0" Left="0"
        Background="Transparent"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" 
                    Grid.Row="0"
                    Height="2" 
                    Background="#33FFFFFF"
                    Foreground="#1DB954"/>

        <!-- Content Panel -->
        <Border x:Name="ContentPanel"
                Grid.Row="1"
                Background="#1E1E1E"
                Visibility="Collapsed">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Track Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" 
                              Text="Not Playing" 
                              Foreground="White" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"
                              Margin="0,0,5,0"/>
                    <TextBlock Text="-" 
                              Foreground="#AAAAAA" 
                              FontSize="11"
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="ArtistText" 
                              Text="No Artist" 
                              Foreground="#AAAAAA" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Up Next -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="10,0">
                    <TextBlock Text="Up Next: " 
                              Foreground="#AAAAAA" 
                              FontSize="11"/>
                    <TextBlock x:Name="UpNextText" 
                              Text="Nothing" 
                              Foreground="White" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Playback Controls -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0,20,0">
                    <Button x:Name="PreviousButton" 
                            Click="PreviousButton_Click"
                            Margin="0,0,16,0">
                        <Path Data="M6 6h2v12H6zm3.5 6l8.5 6V6z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="PlayPauseButton" 
                            Click="PlayPauseButton_Click"
                            Margin="0,0,16,0">
                        <Path x:Name="PlayPauseIcon" 
                              Data="M8 5v14l11-7z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="NextButton" 
                            Click="NextButton_Click">
                        <Path Data="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 